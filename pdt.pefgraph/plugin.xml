<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="PEF Graph"
            id="pdt.pefgraph">
      </category>
      <view
            name="PEF Graph View"
            icon="icons/sample.gif"
            category="pdt.pefgraph"
            class="pdt.pefgraph.internal.views.PEFGraphView"
            id="pdt.pefgraph.views.PEFGraphView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="pdt.pefgraph.views.PEFGraphView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="pdt.pefgraph.PEFNodeActionContribution"
            objectClass="org.cs3.pdt.core.PEFHandle">
         <action
               class="pdt.pefgraph.actions.NodeVisibleAction"
               id="pdt.pefgraph.NodeVisibleAction"
               label="Node Visible"
               style="toggle">
         </action>
      </objectContribution>
      <viewerContribution
            id="pdt.pefgraph.PrologConsoleViewContribution"
            targetID="org.cs3.pdt.console.internal.views.PrologConsoleView">
         <action
               class="pdt.pefgraph.ShowSelectionInPEFGraphAction"
               id="pdt.pefgraph.ShowSelectionInPEFGraphAction"
               label="Show in PEF Graph "
               menubarPath="additions">
         </action>
      </viewerContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IMarker"
            class="pdt.pefgraph.internal.AdapterFactory">
         <adapter
               type="org.cs3.pdt.core.PEFHandle">
         </adapter>
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.core.resources.IResource"
            class="pdt.pefgraph.internal.AdapterFactory">
         <adapter
               type="org.cs3.pdt.core.PEFHandle">
         </adapter>
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
      <factory
            adaptableType="org.cs3.pdt.core.PEFHandle"
            class="pdt.pefgraph.internal.AdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>

</plugin>
