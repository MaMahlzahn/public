<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.cs3.pdt"
   name="PDT Plug-in"
   version="1.0.0"
   provider-name=""
   class="org.cs3.pdt.PDTPlugin">

   <runtime>
      <library name="PDT.jar">
         <export name="*"/>
      </library>
      <library name="lib/Common.jar">
         <export name="*"/>
      </library>
      <library name="lib/Console.jar">
         <export name="*"/>
      </library>
      <library name="lib/MetaData.jar">
         <export name="*"/>
      </library>
      <library name="lib/PrologInterface.jar">
         <export name="*"/>
      </library>
      <library name="lib/RaPlaRPC.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
   </requires>
   
   <extension
         point="org.eclipse.ui.startup">
      <startup class="org.cs3.pdt.startup.StartUp"/>
   </extension>

	<extension
         point="org.eclipse.ui.views">
      <category
            name="Prolog"
            id="org.cs3.pdt"/>
      <view
            allowMultiple="false"
            icon="icons/sample.gif"
            class="org.cs3.pdt.views.PrologConsoleView"
            category="org.cs3.pdt"
            name="Prolog Console"
            id="org.cs3.pdt.views.PrologConsoleView"/>
   </extension>
</plugin>
