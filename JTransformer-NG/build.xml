	<target name="clean" depends="init" description="Clean the plug-in: org.cs3.jtransformer of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/JTransformer_NG.jar"/>
		<delete file="${build.result.folder}/JTransformer_NGsrc.zip"/>
