			<fileset dir="src/">
				<include name="**/*.java"/>
			</fileset>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Compile classes and build nested jars for the plug-in: org.cs3.jtransformer.">
		<available property="JTransformer_NG.jar" file="${build.result.folder}/JTransformer_NG.jar"/>
		<antcall target="JTransformer_NG.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="JTransformer_NGsrc.zip" file="${build.result.folder}/JTransformer_NGsrc.zip"/>
		<antcall target="JTransformer_NGsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.cs3.jtransformer_2.3.0.1"/>
		<copy todir="${destination.temp.folder}/org.cs3.jtransformer_2.3.0.1" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}">
				<include name="JTransformer_NG.jar"/>
			</fileset>
		</copy>
		<copy todir="${destination.temp.folder}/org.cs3.jtransformer_2.3.0.1" failonerror="true" overwrite="false">
			<fileset dir="${basedir}">
				<include name="plugin.xml"/>
				<include name="JTransformer_NG.jar"/>
				<include name="engine/"/>
				<include name="lib/openjgraph-0.9.2.jar"/>
				<include name="icons/"/>
