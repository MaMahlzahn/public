<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.cs3.pdt.runtime"
   name="PrologInterface"
   version="0.2.0"

   class="org.cs3.pdt.runtime.PrologRuntimePlugin">
   <runtime>
      <library name="prologinterface.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.cs3.pdt.common"/>
      <import plugin="org.junit"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.cs3.pdt.common.ui"/>
      <import plugin="org.eclipse.core.resources"/>
   </requires>
   <extension-point id="hooks" name="LifeCycle Hooks" schema="schema/org.cs3.pdt.hooks.exsd"/>
   <extension-point id="bootstrapContribution" name="Bootstrap Contribution" schema="schema/bootstrapContribution.exsd"/>
   <extension-point id="prologLibrary" name="Prolog Library" schema="schema/prologLibrary.exsd"/>
   <extension-point id="prologContextTracker" name="Prolog Context Tracker" schema="schema/prologContextTracker.exsd"/>
	<extension
       point="org.eclipse.core.runtime.preferences">
    <initializer class="org.cs3.pdt.runtime.internal.preferences.Initializer"/>
 </extension>
    <extension
       point="org.eclipse.ui.preferencePages">
    <page
          category="org.cs3.pdt.internal.preferences.PDTPreferencePage"
          class="org.cs3.pdt.runtime.internal.preferences.PreferencePage"
          id="org.cs3.pdt.runtime.internal.preferences.PDTPreferencePage"
          name="Prolog Runtime"/>
 </extension>
    <extension
          point="org.eclipse.ui.startup">
       <startup/>
    </extension>
    <extension
          point="org.cs3.pdt.runtime.prologLibrary">
       <library
             alias="library"
             id="pdt.runtime.library.pif"
             path="library/pif/">
          <attribute
                id="hidden"
                value="true"/>
             
             </library>
		<library
        alias="library"
        id="pdt.runtime.library.common"
        path="library/common/">
     <attribute
           id="hidden"
           value="true"/>
  </library>
 
  <library
        alias="library"
        id="pdt.runtime.library.attic"
        path="library/attic/">
     <attribute
           id="hidden"
           value="true"/>
  </library>
  <library
        alias="library"
        id="pdt.runtime.library.pdt"
        path="library/pdt/">
     <attribute
           id="hidden"
           value="true"/>
  </library>   
  <library
        alias="library"
        id="pdt.runtime.library.testdata"
        path="library/testdata/">
     <attribute
           id="hidden"
           value="true"/>
  </library>   
                  
    </extension>
 
</plugin>
