<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.cs3.pdt.console"
   name="Console"
   version="0.1.2">
   <runtime>
      <library name="console.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.cs3.pdt.common"/>
      <import plugin="org.eclipse.swt"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui"/>
   </requires>
   <extension-point id="consoleContextMenu" name="Console Context Menu" schema="schema/console_context_menu.exsd"/>
   <extension
         point="org.cs3.pdt.console.consoleContextMenu">
      <SelectionContextAction
            class="org.cs3.pl.console.CopyAction"
            name="copy"
            sharedIcon="IMG_TOOL_COPY"/>
      <SelectionContextAction
            class="org.cs3.pl.console.ClearAction"
            icon="icons/clear.gif"
            name="clear"/>
   </extension>

</plugin>
