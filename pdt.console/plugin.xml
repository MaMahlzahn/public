	<extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.cs3.pdt.console.internal.views.PrologConsoleView"
            category="org.cs3.pdt"
            name="Prolog Console"
            id="org.cs3.pdt.console.internal.views.PrologConsoleView"/>
	</extension>
	 <!--<extension
       point="org.cs3.pdt.runtime.hooks">
	    <hook
          class="org.cs3.pdt.console.internal.hooks.ConsoleServerHook"
          id="org.cs3.pdt.console.internal.hooks.ConsoleServerHook"/>
	</extension>-->
	<extension
       point="org.eclipse.core.runtime.preferences">
    <initializer class="org.cs3.pdt.console.internal.preferences.Initializer"/>
 </extension>
    <extension
       point="org.eclipse.ui.preferencePages">
    <page
          category="org.cs3.pdt.internal.preferences.PDTPreferencePage"
          class="org.cs3.pdt.console.internal.preferences.PreferencePage"
          id="org.cs3.pdt.console.internal.preferences.PDTPreferencePage"
          name="Prolog Console"/>
 </extension>
    <extension
          point="org.cs3.pdt.runtime.prologLibrary">
       <library
             alias="library"
             id="pdt.console.library"
             path="pl">
                     <attribute id="hidden" value="true"/>
       </library>
    </extension>
    <extension
          point="org.eclipse.ui.commands">
       <category
             id="org.cs3.pdt.console"
             name="PDT Console Commands"/>
       <command
             category="org.cs3.pdt.console"
             categoryId="org.cs3.pdt.console"
             description="Paste the name of the file currently edited in the editor"
             id="pdt.console.paste_filename"
             name="Paste Filename"/>
    </extension>
    <extension
          point="org.eclipse.ui.contexts">
       <context
             id="org.cs3.pdt.console"
             name="using the prolog console view"
             parentId="org.eclipse.ui.contexts.dialogAndWindow"/>
    </extension>
    <extension
          point="org.eclipse.ui.bindings">
       <key
             commandId="pdt.console.paste_filename"
             contextId="org.eclipse.ui.contexts.window"
             schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
             sequence="CTRL+SHIFT+V"/>
    </extension>

</plugin>
