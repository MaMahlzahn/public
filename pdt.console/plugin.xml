	<extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.cs3.pdt.console.internal.views.PrologConsoleView"
            category="org.cs3.pdt"
            name="Prolog Console"
            id="org.cs3.pdt.console.internal.views.PrologConsoleView"/>
	</extension>
