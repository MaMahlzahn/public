<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.cs3.pdt.console"
   name="Console"
   version="0.2.0.qualifier"

   class="org.cs3.pdt.console.PrologConsolePlugin">
   <runtime>
      <library name="console.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.cs3.pdt.common"/>
      <import plugin="org.eclipse.swt"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.cs3.pdt.core"/>
      <import plugin="org.cs3.pdt.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.cs3.pdt.common.ui"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.core.resources"/>
   </requires>
