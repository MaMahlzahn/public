<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.cs3.pdt.decorator"
   name="PrologDecorator Plug-in"
   version="0.2.0"
   provider-name="http://rppts.iai.uni-bonn.de"
   class="org.cs3.pdt.decorator.DecoratorPlugin">

   <runtime>
      <library name="pdtdecorator.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.cs3.pdt"/>
      <import plugin="org.cs3.pdt.common"/>
      <import plugin="org.cs3.pdt.prologinterface"/>
      <import plugin="org.eclipse.core.resources"/>
   </requires>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            lightweight="true"
            adaptable="true"
            objectClass="org.eclipse.core.resources.IFile"
            label="consulted"
            class="org.cs3.pdt.decorator.internal.ConsultedDecorator"
            state="false"
            location="BOTTOM_RIGHT"
            id="pdt.decorator.consulted"/>
   </extension>

</plugin>
